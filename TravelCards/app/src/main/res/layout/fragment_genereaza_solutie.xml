<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.travelcards.GenereazaSolutie">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="@string/data_plecare"
            android:id="@+id/textViewDataPlecare"
            android:textSize="30dp"
            android:layout_weight="0"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date now"
            android:id="@+id/btnDataPlecare"
            android:layout_marginLeft="30dp"
            android:layout_weight="0.12" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Cauta"
            android:id="@+id/btnCauta"
            android:layout_marginLeft="100dp"
            android:layout_weight="0.09" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="1148dp"
            android:id="@+id/listView" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView" />
    </LinearLayout>

</FrameLayout>
